// Place your key bindings in this file to override the defaults
[
    {
        "key": "alt+x",
        "command": "toggleVim"
    },
    {
        "key": "ctrl+backspace",
        "command": "deleteWordLeft",
        "when": "(textInputFocus && !editorReadonly) || (textInputFocus && !editorReadonly || vim.Mode)"
    },
    {
        "key": "ctrl+backspace",
        "command": "-deleteWordLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "tab",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    // Dodjeljuje 'shift+tab' skrolanje na prethodnu sugestiju
    {
        "key": "shift+tab",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    },
    // Osigurava da 'enter' uvijek prihvaÄ‡a odabranu sugestiju kada je widget vidljiv
    {
        "key": "enter",
        "command": "acceptSelectedSuggestion",
        "when": "editorTextFocus && suggestWidgetVisible"
    }
]